<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class= "pt-5 ml-4 col-md-2 col-sm-6" style="font-size: 20px;">
      <span style="background-color:gainsboro"><strong>　商品一覧　</strong></span>
    </div>
    <div class= "pt-4 ml-auto col-md-3">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus-circle fa-3x" style="color: dimgray;"></i>
      <% end %>
    </div>
  </div>
  <div class='row ml-5'>
    <div class='pt-4 ml-3 col-md-2 col-sm-6'>
      <%= render 'index', item: @item %>
      <%= paginate @items %>
    </div>
  </div>
</div>
