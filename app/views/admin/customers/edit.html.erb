<div class="container">
 <div class='row'>
  <div class="col-md-10 px-5 px-sm-0 mx-auto">
  <h1 class="mt-4"><%= @customer.first_name %>&nbsp;<%= @customer.last_name %>さんの会員情報編集</h1>

  <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>

    <div class="form-row mt-3">
      <%= f.label :会員ID, class: 'col-sm-3 col-form-label' %>
      <div class="col">
      <%= @customer.id %>
      </div>
    </div>

    <div class="form-row">
      <%= f.label :名前, class: 'col-sm-3 col-form-label' %>
      <div class="col">
      <%= f.text_field :first_name, autofocus: true, id: "inputFirst_name" %>
      <%= f.text_field :last_name, autofocus: true, id: "inputLast_name" %>
      </div>
    </div>

    <div class="form-row">
      <%= f.label :フリガナ, class: 'col-sm-3 col-form-label' %>
      <div class="col">
      <%= f.text_field :first_name_kana, autofocus: true, id: "inputFirst_name_kana" %>
      <%= f.text_field :last_name_kana, autofocus: true, id: "inputLast_name_kana" %>
      </div>
    </div>

    <div class="form-row">
      <%= f.label :郵便番号, class: 'col-sm-3 col-form-label' %>
      <div class="col">
      <%= f.text_field :zip_code, autofocus: true, id: "inputPostal_code" %>
      </div>
    </div>

    <div class="form-row">
      <%= f.label :住所, class: 'col-sm-3 col-form-label' %>
      <div class="col">
      <%= f.text_field :address, autofocus: true, id: "inputAddress" %>
      </div>
    </div>

    <div class="form-row">
      <%= f.label :電話番号, class: 'col-sm-3 col-form-label' %>
      <div class="col">
      <%= f.text_field :telephone_number, autofocus: true, id: "inputTelephone_number" %>
      </div>
    </div>

    <div class="form-row">
      <%= f.label :メールアドレス, class: 'col-sm-3 col-form-label' %>
      <div class="col">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-row">
      <%= f.label :会員ステータス, class: 'col-sm-3 col-form-label' %>
    <div class="form-check-inline">
      <%= f.radio_button :is_deleted, false, class: 'form-check-input' %>
      <%= f.label :is_deleted, '有効', value: false, class: 'form-check-label' %>
    </div>
    <div class="form-check-inline">
      <%= f.radio_button :is_deleted, true, class: 'form-check-input' %>
      <%= f.label :is_deleted, '退会', value: true, class: 'form-check-label' %>
    </div>
  　</div>

    <div class="mt-4 mb-4">
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
    </div>

    <% end %>

    </div>
  </div>
</div>