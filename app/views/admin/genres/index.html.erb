<div class='container'>
    <div class='row'>
        <h4 style='margin:20px;'>ジャンル一覧・追加</h4>
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class='row' style='margin:20px;'>
            <%= f.label :ジャンル %>
            <%= f.text_field :name %>
            <%= f.submit '新規登録', class: 'btn btn-success' %>
        </div>
        <% end %>
    </div>
    <table class='table col-lg-4'>
        <thead>
            <tr>
                <th>ジャンル</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <%= paginate @genres %>
</div>