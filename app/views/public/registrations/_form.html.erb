      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="col-3">
            <%= f.label  "名前" %>
          </div>
          <div class="col-1 text-right">
            <%= f.label  "(姓)" %>
          </div>
          <div class="col-3">
            <%= f.text_field :last_name,  autocomplete: "last_name",placeholder: "山田" %>
          </div>
          <div class="col-1 text-right">
            <%= f.label  "(名)" %>
          </div>
          <div class="col-3">
            <%= f.text_field :first_name,  autocomplete: "first_name",placeholder: "太郎" %>
          </div>
        </div>
        <div class="row">
          <div class="col-3">
            <%= f.label  "フリガナ" %>
          </div>
          <div class="col-1 text-right">
            <%= f.label  "(セイ)" %>
          </div>
          <div class="col-3">
            <%= f.text_field :last_name_kana,  autocomplete: "last_name_kana",placeholder: "ヤマダ" %>
          </div>
          <div class="col-1 text-right">
            <%= f.label  "(メイ)" %>
          </div>
          <div class="col-3">
            <%= f.text_field :first_name_kana,  autocomplete: "last_name_kana",placeholder: "タロウ" %>
          </div>
        </div>


        <div class="row">
          <div class="col-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-1"></div>
          <div class="col-4">
            <%= f.email_field :email, autocomplete: "email",placeholder: "index@japan.co.jp" %>
          </div>
        </div>

        <div class="row">
          <div class="col-3">
            <%= f.label :zip_code, "郵便番号(ハイフンなし)" %>
          </div>
          <div class="col-1"></div>
          <div class="col-4">
            <%= f.text_field :zip_code, autocomplete: "zip_code",placeholder: "1112222" %>
          </div>
        </div>

        <div class="row">
          <div class="col-3">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-1"></div>
          <div class="col-8">
            <%= f.text_field :address, autocomplete: "address",placeholder: "愛知県名古屋市中区1-2-3", class:"col-10" %>
          </div>
        </div>

        <div class="row">
          <div class="col-3">
            <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
          </div>
          <div class="col-1"></div>
          <div class="col-4">
            <%= f.text_field :phone_number, autocomplete: "phone_number",placeholder: "09012345678" %>
          </div>
        </div>

        <div class="row">
          <div class="col-3">
            <%= f.label :password, "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %>
          </div>
          <div class="col-1"></div>
          <div class="col-4">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="row">
          <div class="col-3">
            <%= f.label :password_confirmation, "パスワード(確認用)" %>
          </div>
          <div class="col-1"></div>
          <div class="col-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
        <div class="text-center mt-3">
            <%= f.submit  class:"btn btn-success col-3 py-2" %>
        </div>
      <% end %>