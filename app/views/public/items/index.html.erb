<%= stylesheet_link_tag "application", :media => "all" %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-2"><%= render "public/homes/genre", genres: Genre.all %></div>
    <div class="col-md-10">
      <!--以下商品一覧部分!-->
    <h1 style="display:inline;"><strong>
      <% if @genre == nil %>
        商品一覧
      <% else %>
        <%= @genre.name %>一覧
      <% end %>
    </h1>
    (全<%#=@sale_items.count%>件)</strong>
    <%= render "public/items/index", items: @items %>
     <div class="mt-5"><%= paginate @items %></div>
    </div>
  </div>
</div>